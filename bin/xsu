if [ $# -ne 1 ]; then
  echo "usage: $(basename $0) USER"
  exit 1
fi;

# read cookie
XAUTH_COOKIE=$(xauth list ${DISPLAY})

# unset XAUTHORITY, otherwise we'll try to write the wrong user's .Xauthority
unset XAUTHORITY

sudo -u "$1" xauth add $XAUTH_COOKIE
sudo -i -u "$1"
