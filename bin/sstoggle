#!/bin/sh

set -e

# solves https://xkcd.com/196/

MODE=$1

if [ $# -eq 0 ]; then
  MODE=off
fi;

case "$MODE" in
  off)
    echo "Disabling DPMS and screensaver"
    xset -dpms
    xset s off
    xscreensaver-command -exit
    ;;
  on)
    echo "Enabling DPMS and screensaver"
    xset dpms
    xset s on
    ;;
  *)
    echo "Invalid mode: $MODE"
    ;;
esac
