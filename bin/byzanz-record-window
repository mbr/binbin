from __future__ import print_function

import os
import re
import subprocess
import sys

cmd = ['byzanz-record']
if not '--help' in sys.argv[1:]:
    VAL_RE = re.compile('^  (.[^\n:]+): ([^\n]*)$', re.MULTILINE)

    print('Please click the window you wish to record')
    output = subprocess.check_output(['xwininfo'])
    vals = dict(VAL_RE.findall(output))

    cmd.extend([
        'byzanz-record',
        '--x={}'.format(int(vals['Absolute upper-left X'])),
        '--y={}'.format(int(vals['Absolute upper-left Y'])),
        '--width={}'.format(int(vals['Width'])),
        '--height={}'.format(int(vals['Height'])),
    ])

cmd.extend(sys.argv[1:])
os.execvp(cmd[0], cmd[1:])
